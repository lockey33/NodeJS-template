{
  "compilerOptions": {
    "experimentalDecorators": true, // enable decorator
    "emitDecoratorMetadata": true, // permit typegoose to add data for typescript/mongoose decorator
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"],
}